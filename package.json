{
  "name": "pancake-info-api",
  "version": "1.0.0",
  "description": "Serverless API implementation for PancakeSwap on-chain data query.",
  "repository": "git@github.com:pancakeswap/pancake-info-api.git",
  "author": "PancakeSwap",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev src/index.ts",
    "format:check": "prettier --check '*/**/*.{js,ts}'",
    "format:write": "prettier --write '*/**/*.{js,ts}'",
    "lint": "eslint '*/**/*.{js,ts}'",
    "codegen": "graphql-codegen --config ./src/utils/apollo/codegen.yml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format:write",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.3.13",
    "@ethersproject/address": "^5.1.0",
    "@ethersproject/bignumber": "^5.2.0",
    "@ethersproject/solidity": "^5.2.0",
    "@ethersproject/units": "^5.2.0",
    "axios": "^0.21.1",
    "big.js": "^6.1.1",
    "bignumber.js": "^9.0.1",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.3",
    "decimal.js-light": "^2.5.1",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "graphql-tag": "^2.11.0",
    "jsbi": "^3.1.4",
    "lodash": "^4.17.21",
    "lodash.flatmap": "^4.5.0",
    "tiny-invariant": "^1.1.0",
    "tiny-warning": "^1.0.3",
    "toformat": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-operations": "^1.17.11",
    "@types/big.js": "^6.1.0",
    "@types/express": "^4.17.11",
    "@types/node": "^15.6.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "@vercel/node": "^1.9.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "graphql": "^15.5.0",
    "husky": "^4.3.8",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  }
}
